{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="bg-black m-0">
		<div class="container bg-dark bg-gradient mt-2">
			<div class="text-center p-3 bg-dark bg-gradient text-white">
				<div class="row align-items-start align-items-center">
					<p class="text-start m-0 col-2">LeMauvaisCoin</p>
					<button class="d-flex align-items-start btn btn-primary btn-lg col-2">Large button</button>
					<button class="d-flex align-items-end btn btn-primary btn-lg">creer ton post</button>
				</div>
			</div>

			<div class="p-3 mb-2 bg-dark bg-gradient text-white text-center opacity-75">
				<div class="album py-5 bg-dark bg-gradient">
					<div class="container bg-dark bg-gradient">

						<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
							{% for post in posts %}
								<div class="col">
									<div class="card shadow-sm">
										<svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveaspectratio="xMidYMid slice" focusable="false">
											<title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text>
										</svg>
										<div class="card-body">
											<p class="card-text">{{post.title}}</p>
											<div class="d-flex justify-content-between align-items-center">
												<div class="btn-group">
													<button type="button" class="btn btn-sm btn-outline-secondary">View</button>
													<button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
												</div>
												<small class="text-body-secondary">9 mins</small>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}

						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

{% endblock %}

