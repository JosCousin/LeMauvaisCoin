{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="bg-black m-0">
		<div class="container bg-dark bg-gradient mt-2">
			<nav class="navbar bg-body-tertiary">
				<div class="container-fluid">
					<a class="navbar-brand">Navbar</a>
					<form class="d-flex" role="search">
						<input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">

						<button class="btn btn-outline-success" type="submit">
							<a href="/post/new">poster</a>
						</button>
					</form>
				</div>
			</nav>

			<div class="p-3 mb-2 bg-dark bg-gradient text-white text-center opacity-75">
				<div class="album py-5 bg-dark bg-gradient">
					<div class="container bg-dark bg-gradient">

						<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
							{% for post in posts %}
								<div class="col">
									<div class="card shadow-sm">
										<img class="bd-placeholder-img card-img-top" src="{{ asset('/img/Post/' ~ post.picture) }}" width="100%" height="225" role="img">
											<rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">{{post.title}}</text>
										</img>
										<div class="card-body">
											<p class="card-text break">{{post.description}}</p>
											<div class="d-flex justify-content-between align-items-center">
												<div class="btn-group">
													<a href="/post/{{post.id}}/show">
														<button class="btn btn-outline-success" type="submit">
															Voir
														</button>
													</a>

													<a href="/post/{{post.id}}/edit">
														<button class="btn btn-outline-secondary" type="submit">
															Modifier
														</button>
													</a>
												</div>
												<small class="text-body-secondary">9 mins</small>
											</div>
										</div>
									</div>
								</div>
							{% endfor %}

						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

{% endblock %}

